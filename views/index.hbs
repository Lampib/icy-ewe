    </main>

    <footer class="app__footer">
      <div class="main-nav">
        <nav class="main-nav__nav-items">
          <a href="#project-section" class="main-nav__nav-item">Projects</a>
          <a href="#contact-section" class="main-nav__nav-item">Contacts</a>
          {{#if user.loggedIn}}
            <a href="/icy-ewe" class="main-nav__nav-item">Open Chat</a>
