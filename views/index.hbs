<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ title }}</title>

  <link href="https://fonts.googleapis.com/css?family=Arvo:400,700|Open+Sans:400,700"
        rel="stylesheet"
        media="none" onload="media='all'">
  {{! update this and the file name }}
  <link rel="stylesheet" href="/assets/stylesheets/preco.0.0.5.css">
</head>

<body>
  <header class="main-header">
    <div class="main-header__wrapper">
      <div class="main-header__content">
        <h1 class="main-header__title">Preco</h1>
      </div>
    </div>
  </header>

  <div class="app">
    <main class="app__body">
      <div class="splash-screen">
        <div class="splash-screen__overlay">
          <h1 class="splash-screen__title">Preco{{#if debug}} - DEBUG{{/if}}</h1>
          <p class="splash-screen__strap-line">Every box counts</p>
        </div>
      </div>

      <h2 class="section-header" id="project-section">Projects</h2>
      <div class="project-section">
        {{#each companies}}
          {{#if description}}
            <div class="project-section__project">
              {{#if website}}
                <a class="project-section__image-wrapper"
                  href="{{ website }}"
                  target="_blank">
                  <img class="project-section__image" src="{{ image }}">
                  <h3 class="project-section__title">{{ name }}</h3>
                </a>
              {{else}}
                <div class="project-section__image-wrapper">
                  <img class="project-section__image" src="{{ image }}">
                  <h3 class="project-section__title">{{ name }}</h3>
                </div>
              {{/if}}

              <div class="project-section__info">
                <div class="project-section__blurb markdown">
                  {{md description}}
                </div>

                <div class="project-section__links">
                  {{!
                  <a class="project-section__link">Contacts <i class="project-section__link-icon far fa-angle-right"></i></a>
                  }}
                  {{#if website}}
                    <a class="project-section__link"
                      href="{{ website }}"
                      target="_blank">
                      Website <i class="project-section__link-icon far fa-angle-right"></i>
                    </a>
                  {{/if}}

                  {{#if email}}
                    <a class="project-section__link"
                      href="mailto:{{ email }}">
                      {{ email }} <i class="project-section__link-icon far fa-angle-right"></i>
                    </a>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
      <!-- END ==> project-section -->


      <h2 class="section-header" id="contact-section">Contacts</h2>

      <div class="contact-section">
        <div class="contact-section__contact-list">
          {{#each displayPeople}}
            <div class="contact-section__contact">
              <div class="contact-section__contact-image-wrapper">
                <img class="contact-section__contact-image"
                    src="{{ thumb }}"
                    alt=""
                    role="presentation">
              </div>

              <div class="contact-section__contact-details">
                <p class="contact-section__contact-detail contact-section__contact-detail--name">
                  {{ name }}{{#if isUser}} - You{{/if}}</p>
                <p class="contact-section__contact-detail contact-section__contact-detail--role">
                  {{#if role }}
                    {{ role }} <small>at</small>
                  {{/if}}
                  {{ company.name }}</p>
                {{#if phone_1 }}
                  <p class="contact-section__contact-detail contact-section__contact-detail--phone-1">
                    {{ phone_1 }}</p>
                {{/if}}
                {{#if phone_2 }}
                  <p class="contact-section__contact-detail contact-section__contact-detail--phone-2">
                    {{ phone_2 }}</p>
                {{/if}}
                <a class="contact-section__contact-detail contact-section__contact-detail--email"
                  href="mailto:{{ email }}">
                  {{ email }}</a>
              </div>
            </div>
          {{/each}}

          {{#times 2}}
            <div class="contact-section__contact contact-section__contact--padder"></div>
          {{/times}}
        </div>

        {{#if user.loggedIn}}
          <div class="contact-section__contact-list">
            {{#each nonPrimaryPeople}}
              <div class="contact-section__contact">
                <div class="contact-section__contact-image-wrapper">
                  <img class="contact-section__contact-image"
                      src="{{ thumb }}"
                      alt=""
                      role="presentation">
                </div>

                <div class="contact-section__contact-details">
                  {{#if ../user.isAdmin}}
                    <button class="contact-section__delete-contact"
                            onclick="if(confirm('Are you sure you want to delete this person?')){location.href='/delete-person/{{ uuid }}'}">x</button>
                  {{/if}}
                  <p class="contact-section__contact-detail contact-section__contact-detail--name">
                    {{ name }}{{#if isUser}} - You{{/if}}</p>
                  <p class="contact-section__contact-detail contact-section__contact-detail--role">
                    {{#if role }}
                      {{ role }} at
                    {{/if}}
                    {{ company.name }}</p>
                  {{#if phone_1 }}
                    <p class="contact-section__contact-detail contact-section__contact-detail--phone-1">
                      {{ phone_1 }}</p>
                  {{/if}}
                  {{#if phone_2 }}
                    <p class="contact-section__contact-detail contact-section__contact-detail--phone-2">
                      {{ phone_2 }}</p>
                  {{/if}}
                  <a class="contact-section__contact-detail contact-section__contact-detail--email"
                    href="mailto:{{ email }}">
                    {{ email }}</a>
                </div>
              </div>
            {{/each}}

            {{#times 2}}
              <div class="contact-section__contact contact-section__contact--padder"></div>
            {{/times}}
          </div>
        {{/if}}
      </div>
      <!-- END => contact-section -->


